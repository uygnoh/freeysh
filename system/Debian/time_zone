###########################################################
### 1 % debain时区设置
###########################################################
1 su -
2 tzselect
3 选择Asia
4 选择China
5 vim /etc/profile
% 在文件尾部加入：
export TZ='Asia/Shanghai'
export PATH=$PATH:$TZ


###########################################################
###  2 % 用于修改系统时区
###########################################################
% 适用于Debian 命令, Asia,亚洲

# dpkg-reconfigure tzdata 
